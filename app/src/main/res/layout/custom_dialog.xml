<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCDHeader"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Fatigute Detected!"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCDText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="Please consider resting until you feel recharged"
        android:textAlignment="center"
        android:textStyle="" />

    <TextView
        android:id="@+id/tvCDText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="Do you want us to take you to near resting place?"
        android:textAlignment="center"
        android:textStyle="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnYes"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Yes" />

        <Button
            android:id="@+id/btnNo"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:text="No" />
    </LinearLayout>
</LinearLayout>
